{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-t:Build;Publish",
                "${workspaceFolder}/src/non.sln",
                //"--no-restore",
                "/property:GenerateFullPaths=true"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/src/NonConTroll.sln"
            ],
            "group": "build",
            "presentation": {
                "clear": true,
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-msproj",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "env": {
                    "NonConTrollToolsPath": "${workspaceFolder}/artifacts/NonConTroll"
                }
            },
            "args": [
                "build",
                "${fileDirname}"
            ],
            "presentation": {
                "clear": true,
                "reveal": "silent",
                "revealProblems": "onProblem"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-msproj",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "env": {
                    "NonConTrollToolsPath": "${workspaceFolder}/artifacts/NonConTroll"
                }
            },
            "args": [
                "run",
                "--project",
                "${fileDirname}"
            ],
            "presentation": {
                "focus": true,
                "clear": true,
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "NonConTroll.Compiler",
            "command": "NonConTroll.Compiler",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "env": {
                    "PATH": "%PATH%;${workspaceFolder}/artifacts/NonConTroll"
                }
            },
            "args": [
                "${file}"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": [
                    {
                        // "regexp": "^(.+)\\((\\d,\\d,\\d,\\d)\\):\\s+(.+)$",
                        "regexp": "^(.*)\\((\\d+,\\d+,\\d+,\\d+)\\):\\s+(info|warning|error): (.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        },
        {
            "label": "NonConTroll.Repl",
            "command": "NonConTroll.Repl",
            "type": "process",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/samples",
                "env": {
                    "PATH": "%PATH%;${workspaceFolder}/artifacts/NonConTroll"
                }
            },
            "presentation": {
                "clear": true,
                "focus": true
            }
        }
    ]
}
